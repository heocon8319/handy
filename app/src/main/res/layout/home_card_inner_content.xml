<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_marginLeft="3dp"
                android:layout_height="50dp">

    <TextView
        android:id="@+id/handy_card_header_inner_simple_title"
        android:textSize="14sp"
        android:textColor="#999"
        android:fontFamily="sans-serif-light"
        android:layout_marginLeft="3dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/home_card_type"
        android:background="@drawable/home_card_type_backgroud"
        android:textStyle="bold"
        android:textColor="@color/type_text_color"
        android:textSize="7sp"
        android:textAllCaps="true"
        android:gravity="top|center_horizontal"
        android:layout_marginRight="34dp"
        android:layout_marginTop="5dp"
        android:layout_alignTop="@+id/handy_card_header_inner_simple_title"
        android:layout_width="wrap_content"
        android:minWidth="25dp"
        android:layout_height="10dp"
        android:layout_alignParentRight="true"/>

    <TextView
        android:id="@+id/home_card_type_2"
        android:background="@drawable/home_card_type_backgroud"
        android:textStyle="bold"
        android:textColor="@color/type_text_color"
        android:textSize="7sp"
        android:textAllCaps="true"
        android:gravity="top|center_horizontal"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_alignTop="@+id/handy_card_header_inner_simple_title"
        android:layout_width="wrap_content"
        android:minWidth="25dp"
        android:layout_height="10dp"
        android:layout_alignParentRight="true"/>

    <TextView
        android:id="@+id/carddemo_gplay_main_inner_subtitle"
        android:textSize="14sp"
        android:textColor="#666"
        android:fontFamily="sans-serif-light"
        android:layout_marginLeft="3dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="0dp"
        android:layout_width="90dp"
        android:layout_height="26dp"
        android:gravity="center_vertical"/>


    <ImageButton
        android:id="@+id/card_header_button_overflow"
        style="@style/card.header_button_base.overflow"
        android:background="@drawable/card_menu_button_overflow"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="0dp"
        android:layout_alignTop="@+id/carddemo_gplay_main_inner_subtitle"/>




</RelativeLayout>


